<container class="panel-container">
  <text class="heading">Hi, I'm Merci, your assistant</text>

  <container id="messages-container" class="messages-container">
    <!-- Chat messages will be added dynamically -->
  </container>

  <container class="input-row">
    <input id="message-input" class="message-input" placeholder="Type a message..." />
    <button id="send-btn" class="send-button">MIC</button>
  </container>

  <button id="xr-button" class="xr-button">Enter XR</button>
</container>
