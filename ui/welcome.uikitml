<style>
  .panel-container {
    padding: 3;
    width: 80;
    height: 100;
    display: flex;
    flex-direction: column;
    background-color: rgba(42, 42, 42, 0.2);
    border-radius: 3;
  }

  .heading {
    font-size: 3.5;
    font-weight: medium;
    color: #fafafa;
    text-align: center;
    margin-bottom: 2;
  }

  .messages-container {
    flex-grow: 1;
    max-height: 60;
    display: flex;
    flex-direction: column;
    gap: 2;
    padding-bottom: 2;
    overflow: scroll;
    overflow-x: hidden;
  }

  .user-message {
    align-self: flex-end;
    max-width: 70%;
    padding: 2;
    background-color: rgba(255, 255, 255, 0.7);
    color: #1f1f1f;
    border-radius: 2;
    font-size: 1.8;
  }

  .assistant-message {
    align-self: flex-start;
    max-width: 70%;
    padding: 2;
    background-color: rgba(0, 122, 255, 0.65);
    color: #ffffff;
    border-radius: 2;
    font-size: 1.8;
  }

  .input-row {
    display: flex;
    flex-direction: row;
    gap: 1.5;
    align-items: center;
  }

  .message-input {
    flex-grow: 1;
    padding: 2;
    min-height: 6;
    background-color: rgba(255, 255, 255, 0.15);
    color: #fafafa;
    border-radius: 2;
    border-width: 0.1;
    border-color: rgba(255, 255, 255, 0.3);
    font-size: 1.8;
  }

  .send-button {
    width: 6;
    height: 6;
    background-color: rgba(255, 59, 48, 0.9);
    color: #ffffff;
    border-radius: 3;
    font-size: 1.6;
    text-align: center;
    cursor: pointer;
  }

  .xr-button {
    width: 100%;
    padding: 1.5;
    margin-top: 1.5;
    background-color: rgba(250, 250, 250, 0.8);
